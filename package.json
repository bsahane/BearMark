{
  "name": "bearmark",
  "version": "1.0.0",
  "description": "A beautiful markdown editor inspired by Bear.app",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.ts,.vue",
    "lint:fix": "eslint . --ext .js,.ts,.vue --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t bearmark .",
    "docker:run": "docker run -p 8080:80 bearmark",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker system prune -f"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "marked": "^9.1.6",
    "prismjs": "^1.29.0",
    "sql.js": "^1.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@tailwindcss/typography": "^0.5.10",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "markdown",
    "editor",
    "notes",
    "writing",
    "sqlite",
    "local-first"
  ],
  "author": "BearMark Team",
  "license": "MIT"
}
